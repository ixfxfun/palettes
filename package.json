{
  "name": "@ixfx/palettes",
  "version": "1.0.3",
  "author": "Clint Heyer",
  "homepage": "https://clintio.us",
  "description": "",
  "type": "module",
  "main": "./dist/src/index.js",
  "exports": {
    ".": "./dist/src/index.js",
    "./bidi/*": {
      "types": "./dist/src/bidi/*.d.ts",
      "import": "./dist/src/bidi/*.js"
    }
  },
  "imports": {
    "#root/*": "./*"
  },
  "scripts": {
    "build": "tsc",
    "dev": "vitest",
    "ci": "npm run build && npm run lint && npm run attw && npx publint && npm run test",
    "clean": "rm -rf ./dist",
    "fix": "biome check --write .",
    "lint": "biome ci .",
    "format": "format .",
    "knip": "knip --config ./knip.json",
    "attw": "attw --pack . --profile=node16 --profile=esm-only",
    "test": "vitest run",
    "release": "changeset version && changeset publish",
    "prepublishOnly": "npm run ci",
    "api": "shx rm -rf docs/api/ && typedoc --out docs/api/ --readme none --entryPoints src --entryPointStrategy expand --exclude '**/*.test.ts'"
  },
  "keywords": [],
  "license": "MIT",
  "devDependencies": {
    "@arethetypeswrong/cli": "0.17.3",
    "@biomejs/biome": "1.9.4",
    "@changesets/cli": "2.27.12",
    "publint": "0.3.7",
    "shx": "0.3.4",
    "typedoc": "0.27.7",
    "typescript": "5.8.0-beta",
    "vitest": "3.0.5"
  },
  "files": [
    "package.json",
    "README.md",
    "LICENSE",
    "src/**/*.ts",
    "dist/**/*.js",
    "dist/**/*.js.map",
    "dist/**/*.d.ts",
    "dist/**/*.d.ts.map",
    "!src/**/*.test.ts",
    "!dist/**/*.test.js",
    "!dist/**/*.test.js.map",
    "!dist/**/*.test.d.ts",
    "!dist/**/*.test.d.ts.map"
  ],
  "publishConfig": {
    "access": "public"
  }
}
